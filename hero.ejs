<%-include("navbar.ejs")%>

<% if(list_hero.length==0){ %>

<div class="container shadow mt-5 p-4">
    <h3>Add Hero Banner</h3>
    <form action="/admin/save_hero" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-4 mt-3">
                Enter title:
                <input class="form-control" type="text" name="title" id="">
            </div>

            <div class="col-md-4 mt-3">
                Enter Sub-title:
                <input class="form-control" type="text" name="sub_title" id="">
            </div>

            <div class="col-md-4 mt-3">
                Upload Photo:
                <input class="form-control" type="file" name="photo" id="">
            </div>
            <div class="col-md-12 mt-3 ">
                Enter the Details:
                <textarea class="editor form-control" name="details" id=""></textarea>
            </div>
            <div class="col-md-12 mt-3 text-center">
                <button class="btn btn-primary">Save Hero Section</button>
            </div>
        </div>
    </form>

</div>

<% } %>


<div class="container shadow mt-5 p-4">
    <div class="row">
        <div class="col-md-12">
            <h3>Hero Section</h3>
        </div>
        <div class="col-md-12">
            <table class="table table-stripped">
                <tr>
                    <th>Action</th>
                    <th>Title</th>
                    <th>Sub-Title</th>
                    <th>Details</th>
                    <th>Photo</th>
                </tr>

                <%  for(var i=0;i<list_hero.length;i++){ %>

                    <tr>
                        <td>
                            <a href="/admin/edit_hero/<%-list_hero[i].hero_id%>">Edit</a>
                            <a href="/admin/hero_delete/<%-list_hero[i].hero_id%>">Delete</a>
                        </td>
                        <td><%-list_hero[i].title%></td>
                        <td><%-list_hero[i].sub_title%></td>
                        <td><%-list_hero[i].details%></td>
                        <td>
                            <img style="width: 100px; height: 100px;" src="/<%-list_hero[i].photo%>" alt="">
                        </td>
                    </tr>

               <% } %>

            </table>
        </div>
    </div>
</div>




<%-include("footer.ejs")%>