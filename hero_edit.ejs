<%-include("navbar.ejs")%>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src='https://cdnjs.cloudflare.com/ajax/libs/ckeditor5/38.0.1/ckeditor.min.js'></script>

<div class="container shadow mt-5 p-4">

    <h3>Edit Hero Banner</h3>
    <form action="/admin/update_hero" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-4 mt-3">
                <input type="hidden" name="hero_id" value="<%-data[0].hero_id%>" id="">
                Enter title:
                <input class="form-control" type="text"  value="<%-data[0].title%>" name="title" id="">
            </div>

            <div class="col-md-4 mt-3">
                Enter Sub-title:
                <input class="form-control" type="text"  value="<%-data[0].sub_title%>" name="sub_title" id="">
            </div>

            <div class="col-md-3 mt-3">
                Upload Photo:
                <input class="form-control" type="file"  name="photo" id="">
            </div>

            <div class="col-md-1 mt-3">
                <img style="width: 100%;" src="/<%-data[0].photo%>" alt="">
            </div>

            <div class="col-md-12 mt-3 ">
                Enter the Details:
                <textarea class="editor form-control"   name="details" id=""><%-data[0].details%></textarea>
            </div>
            <div class="col-md-12 mt-3 text-center">
                <button class="btn btn-primary">Edit  Hero Section</button>
            </div>
        </div>
    </form>

</div>

<%-include("footer.ejs")%>